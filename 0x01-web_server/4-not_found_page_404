sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get -y install nginx
sudo service nginx start
echo "Hello world" | sudo tee /var/www/html/index.html
searchString="\tlocation / {"
stringReplace="\tlocation /redirect_me {\n\t\treturn 301 \$scheme://https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n\tlocation / {"
sudo sed -i "s@^$searchString@$stringReplace@" /etc/nginx/sites-available/default
sudo service nginx restart

sudo touch /var/www/html/error.html
sudo echo "Ceci n'est pas une page" | sudo tee /var/www/html/error.html
findit="\tlocation / {"
replace="\terror_page 404 /error.html;\n\n\tlocation /redirect_me {\n\t\treturn 301 \$scheme:https://youtu.be/OE2NPmqZ9nM;\n\t}\n\n\tlocation / {"
sudo sed -i "s@^$findit@$replace@" /etc/nginx/sites-available/default
sudo service nginx restart
